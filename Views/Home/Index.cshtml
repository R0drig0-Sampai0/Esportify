@{
    ViewData["Title"] = "Home | Esportify";
}

<div class="homepage-container">
    <div class="row">
        <!-- Left Sidebar - Favorite Games -->
        <div class="col-lg-3 sidebar">
            <div class="sidebar-card">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="sidebar-title">My Games</h3>
                    <a asp-controller="Games" asp-action="Index" class="btn btn-sm btn-outline-success">Add More</a>
                </div>

                @if (User.Identity.IsAuthenticated && ViewData["FavoriteGames"] is List<Game> favoriteGames && favoriteGames.Any())
                {
                    <ul class="favorite-games-list">
                        @foreach (var game in favoriteGames)
                        {
                            <li class="favorite-game-item">
                                <img src="@game.ImageUrl" alt="@game.Name" class="game-icon">
                                <span>@game.Name</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-gamepad text-success"></i>
                        <p>No favorite games yet</p>
                        <a asp-controller="Games" asp-action="Index" class="btn btn-success btn-sm">Browse Games</a>
                    </div>
                }
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9 main-content">
            <!-- Upcoming Tournaments Section -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="section-title">Upcoming Tournaments</h2>
                    <a asp-controller="Tournaments" asp-action="Index" class="btn btn-sm btn-outline-success">View All</a>
                </div>

                <div class="row">
                    @if (ViewData["UpcomingTournaments"] is List<Tournament> upcomingTournaments)
                    {
                        @foreach (var tournament in upcomingTournaments)
                        {
                            <div class="col-md-4 mb-4">
                                <div class="tournament-card">
                                    <div class="game-badge">@tournament.Game.Name</div>
                                    <img src="@tournament.ImageUrl" class="card-img-top" alt="@tournament.Name">
                                    <div class="card-body">
                                        <h3 class="tournament-title">@tournament.Name</h3>
                                        <div class="tournament-details">
                                            <div class="detail-item">
                                                <i class="fas fa-calendar-alt text-success"></i>
                                                <span>@tournament.StartDate.ToString("MMM dd") - @tournament.EndDate.ToString("MMM dd, yyyy")</span>
                                            </div>
                                            <div class="detail-item">
                                                <i class="fas fa-users text-success"></i>
                                                <span>@tournament.Registrations.Count participants</span>
                                            </div>
                                            <div class="detail-item">
                                                <i class="fas fa-trophy text-success"></i>
                                                <span>@tournament.PrizePool Prize Pool</span>
                                            </div>
                                        </div>
                                        <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-outline-success w-100 mt-3">View Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>

            <!-- Browse Games Section -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="section-title">Browse Games</h2>
                    <a asp-controller="Games" asp-action="Index" class="btn btn-sm btn-outline-success">View All</a>
                </div>

                <div class="row">
                    @if (ViewData["PopularGames"] is List<Game> popularGames)
                    {
                        @foreach (var game in popularGames)
                        {
                            <div class="col-6 col-md-3 mb-4">
                                <div class="game-card">
                                    <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                                        <img src="@game.ImageUrl" alt="@game.Name" class="game-image">
                                        <div class="game-overlay">
                                            <h3 class="game-title">@game.Name</h3>
                                            <span class="game-tournaments">@game.Tournaments.Count tournaments</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>

            <!-- Create Team CTA -->
            @if (User.Identity.IsAuthenticated)
            {
                <section class="mb-5">
                    <div class="create-team-cta">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h2>Ready to build your dream team?</h2>
                                <p>Create or join a team to compete in tournaments together</p>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <a asp-controller="Teams" asp-action="Create" class="btn btn-success btn-lg">Create Team</a>
                            </div>
                        </div>
                    </div>
                </section>
            }

            <!-- Popular Tournaments (Most Registrations) -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="section-title">Popular Tournaments</h2>
                    <a asp-controller="Tournaments" asp-action="Index" class="btn btn-sm btn-outline-success">View All</a>
                </div>

                <div class="popular-tournaments">
                    @if (ViewData["PopularTournaments"] is List<Tournament> popularTournaments)
                    {
                        @foreach (var tournament in popularTournaments)
                        {
                            <div class="popular-tournament-card">
                                <img src="@tournament.ImageUrl" alt="@tournament.Name" class="popular-tournament-image">
                                <div class="popular-tournament-content">
                                    <span class="game-badge">@tournament.Game.Name</span>
                                    <h3>@tournament.Name</h3>
                                    <div class="stats">
                                        <span><i class="fas fa-users text-success"></i> @tournament.Registrations.Count Registered</span>
                                        <span><i class="fas fa-trophy text-success"></i> @tournament.PrizePool</span>
                                    </div>
                                    <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-success">Register Now</a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>

            <!-- High Prize Tournaments -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="section-title">Big Prize Tournaments</h2>
                    <a asp-controller="Tournaments" asp-action="Index" class="btn btn-sm btn-outline-success">View All</a>
                </div>

                <div class="row">
                    @if (ViewData["HighPrizeTournaments"] is List<Tournament> highPrizeTournaments)
                    {
                        @foreach (var tournament in highPrizeTournaments)
                        {
                            <div class="col-md-4 mb-4">
                                <div class="prize-tournament-card">
                                    <div class="prize-badge">@tournament.PrizePool</div>
                                    <img src="@tournament.ImageUrl" alt="@tournament.Name" class="card-img-top">
                                    <div class="card-body">
                                        <span class="game-tag">@tournament.Game.Name</span>
                                        <h3 class="tournament-title">@tournament.Name</h3>
                                        <div class="tournament-meta">
                                            <span><i class="fas fa-calendar-alt text-success"></i> @tournament.StartDate.ToString("MMM dd")</span>
                                            <span><i class="fas fa-users text-success"></i> @tournament.Registrations.Count</span>
                                        </div>
                                        <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-success w-100 mt-3">Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --bs-primary: #28a745; /* Green */
            --bs-dark: #121212; /* Dark background */
            --bs-light: #f8f9fa; /* Light text */
            --accent: #1e1e1e; /* Slightly lighter dark for accents */
            --highlight: #218838; /* Darker green for highlights */
        }

        body {
            background-color: var(--bs-dark);
            color: var(--bs-light);
        }

        /* Base Layout */
        .homepage-container {
            padding: 2rem 0;
        }

        /* Sidebar Styles */
        .sidebar {
            position: sticky;
            top: 20px;
            height: fit-content;
        }

        .sidebar-card {
            background: var(--accent);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .sidebar-title {
            font-size: 1.25rem;
            margin-bottom: 0;
            color: var(--bs-primary);
        }

        .favorite-games-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .favorite-game-item {
            display: flex;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            transition: background-color 0.2s;
        }

            .favorite-game-item:hover {
                background-color: rgba(40, 167, 69, 0.1);
                border-radius: 4px;
            }

            .favorite-game-item:last-child {
                border-bottom: none;
            }

        .game-icon {
            width: 30px;
            height: 30px;
            border-radius: 4px;
            margin-right: 12px;
            object-fit: cover;
        }

        .empty-state {
            text-align: center;
            padding: 1.5rem 0;
        }

            .empty-state i {
                font-size: 2rem;
                margin-bottom: 1rem;
            }

            .empty-state p {
                margin-bottom: 1rem;
                opacity: 0.8;
            }

        /* Tournament Cards */
        .tournament-card {
            background: var(--accent);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
        }

            .tournament-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
                border-color: var(--bs-primary);
            }

        .game-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: var(--bs-primary);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.8rem;
        }

        .tournament-title {
            font-size: 1.25rem;
            margin-bottom: 1rem;
            color: white;
        }

        .tournament-details {
            margin-bottom: 1rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

            .detail-item i {
                margin-right: 10px;
                width: 16px;
                text-align: center;
            }

        /* Game Cards */
        .game-card {
            position: relative;
            border-radius: 8px;
            overflow: hidden;
            aspect-ratio: 1/1;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .game-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }

        .game-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
            padding: 1rem;
            color: white;
            transform: translateY(100%);
            transition: transform 0.3s;
        }

        .game-card:hover .game-overlay {
            transform: translateY(0);
        }

        .game-card:hover .game-image {
            transform: scale(1.05);
        }

        .game-card:hover {
            border-color: var(--bs-primary);
        }

        .game-title {
            font-size: 1rem;
            margin-bottom: 0.25rem;
        }

        .game-tournaments {
            font-size: 0.8rem;
            opacity: 0.8;
        }

        /* Create Team CTA */
        .create-team-cta {
            background: linear-gradient(rgba(18, 18, 18, 0.9), url('/images/team-bg.jpg') no-repeat center center;
            background-size: cover;
            padding: 2rem;
            border-radius: 8px;
            color: white;
            border: 1px solid var(--bs-primary);
        }

            .create-team-cta h2 {
                font-size: 1.75rem;
                margin-bottom: 0.5rem;
                color: var(--bs-primary);
            }

            .create-team-cta p {
                opacity: 0.9;
                margin-bottom: 0;
            }

        /* Popular Tournaments */
        .popular-tournaments {
            display: grid;
            gap: 1.5rem;
        }

        .popular-tournament-card {
            display: flex;
            background: var(--accent);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            overflow: hidden;
            height: 200px;
        }

            .popular-tournament-card:hover {
                border-color: var(--bs-primary);
            }

        .popular-tournament-image {
            width: 40%;
            object-fit: cover;
        }

        .popular-tournament-content {
            padding: 1.5rem;
            flex: 1;
            position: relative;
        }

            .popular-tournament-content h3 {
                font-size: 1.5rem;
                margin: 0.5rem 0 1rem;
                color: white;
            }

            .popular-tournament-content .stats {
                display: flex;
                gap: 1.5rem;
                margin-bottom: 1.5rem;
            }

                .popular-tournament-content .stats span {
                    display: flex;
                    align-items: center;
                    font-size: 0.9rem;
                }

                    .popular-tournament-content .stats span i {
                        margin-right: 5px;
                    }

        /* Prize Tournaments */
        .prize-tournament-card {
            background: var(--accent);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            overflow: hidden;
            position: relative;
            height: 100%;
        }

            .prize-tournament-card:hover {
                border-color: var(--bs-primary);
            }

        .prize-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: var(--highlight);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.9rem;
            z-index: 2;
        }

        .game-tag {
            display: inline-block;
            background: rgba(255, 255, 255, 0.1);
            padding: 3px 10px;
            border-radius: 4px;
            font-size: 0.8rem;
            margin-bottom: 0.5rem;
        }

        .tournament-meta {
            display: flex;
            gap: 1rem;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

            .tournament-meta span {
                display: flex;
                align-items: center;
            }

                .tournament-meta span i {
                    margin-right: 5px;
                }

        /* Section Titles */
        .section-title {
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0;
            color: var(--bs-primary);
        }

        /* Buttons */
        .btn-success {
            background-color: var(--bs-primary);
            border-color: var(--bs-primary);
        }

            .btn-success:hover {
                background-color: var(--highlight);
                border-color: var(--highlight);
            }

        .btn-outline-success {
            color: var(--bs-primary);
            border-color: var(--bs-primary);
        }

            .btn-outline-success:hover {
                background-color: var(--bs-primary);
                color: white;
            }

        /* Responsive Adjustments */
        @@media (max-width: 992px) {
            .sidebar {
                position: static;
                margin-bottom: 2rem;
            }

            .popular-tournament-card {
                flex-direction: column;
                height: auto;
            }

            .popular-tournament-image {
                width: 100%;
                height: 150px;
            }
        }

        @@media (max-width: 768px) {
            .section-title {
                font-size: 1.5rem;
            }

            .create-team-cta .row {
                flex-direction: column;
                text-align: center;
            }

            .create-team-cta .col-md-4 {
                margin-top: 1rem;
                text-align: center !important;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Simple animation for cards on scroll
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = 1;
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.tournament-card, .game-card, .popular-tournament-card, .prize-tournament-card').forEach(card => {
                card.style.opacity = 0;
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.5s, transform 0.5s';
                observer.observe(card);
            });
        });
    </script>
}