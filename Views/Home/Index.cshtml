@{
    ViewData["Title"] = "Home | Esportify";
}

<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">Compete in the World's Biggest <span class="text-gradient">Esports Tournaments</span></h1>
                <p class="hero-subtitle">Join thousands of gamers, prove your skills, and win amazing prizes</p>
                <div class="hero-buttons">
                    <a asp-controller="Tournaments" asp-action="Index" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-trophy me-2"></i> Browse Tournaments
                    </a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-user-plus me-2"></i> Join Now
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="/images/hero-gamer.png" alt="Esports Gamer" class="img-fluid hero-image">
            </div>
        </div>
    </div>
</section>

