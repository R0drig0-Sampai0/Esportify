@model List<Game>
@{
    ViewData["Title"] = "Início | Esportify";
}

@section Styles {
    <style>
        :root {
            --black: #0a0a0a;
            --dark-grey: #1a1a1a;
            --medium-grey: #2a2a2a;
            --light-grey: #3a3a3a;
            --green: #00ff88;
            --dark-green: #00cc6a;
            --text: #ffffff;
            --error: #ff4655;
        }

        body {
            background-color: var(--black);
            color: var(--text);
            font-family: 'Inter', sans-serif;
        }

        .homepage-container {
            padding: 2rem 0;
        }

        /* Sidebar Styles */
        .sidebar {
            position: sticky;
            top: 2rem;
            height: fit-content;
        }

        .sidebar-card {
            background: var(--dark-grey);
            border: 1px solid var(--medium-grey);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .sidebar-title {
            color: var(--green);
            font-size: 1.25rem;
            font-weight: 700;
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-outline-success {
            border: 2px solid var(--green);
            color: var(--green);
            font-size: 0.8rem;
            font-weight: 600;
            padding: 0.4rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-outline-success:hover {
                background-color: var(--green);
                border-color: var(--green);
                color: var(--black);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0, 255, 136, 0.3);
            }

        .favorite-games-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 0.75rem;
            margin: 1rem 0 0 0;
            padding: 0;
            list-style: none;
        }

        .favorite-game-item {
            position: relative;
            aspect-ratio: 1/1;
            border-radius: 8px;
            overflow: hidden;
            border: 2px solid var(--medium-grey);
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .favorite-game-item:hover {
                border-color: var(--green);
                transform: scale(1.05);
                box-shadow: 0 8px 24px rgba(0, 255, 136, 0.2);
            }

        .game-icon {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .game-name-tooltip {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.95));
            color: var(--text);
            padding: 0.75rem;
            font-size: 0.8rem;
            font-weight: 600;
            text-align: center;
            opacity: 0;
            transform: translateY(100%);
            transition: all 0.3s ease;
        }

        .favorite-game-item:hover .game-name-tooltip {
            opacity: 1;
            transform: translateY(0);
        }

        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: var(--text);
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: 1.5rem;
                color: var(--green);
                opacity: 0.7;
            }

            .empty-state p {
                margin-bottom: 2rem;
                opacity: 0.8;
                font-size: 1.1rem;
            }

        .btn-success {
            background: var(--green);
            border: none;
            color: var(--black);
            font-weight: 700;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

            .btn-success:hover {
                background: var(--dark-green);
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(0, 255, 136, 0.3);
            }

        .more-games-count {
            grid-column: 1 / -1;
            text-align: center;
            margin-top: 1rem;
        }

            .more-games-count small {
                color: var(--green);
                font-weight: 600;
                font-size: 0.9rem;
            }

        /* Main Content Styles */
        .main-content {
            padding-left: 2rem;
        }

        .section-title {
            color: var(--green);
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Game Cards Grid */
        .games-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .game-card {
            position: relative;
            border-radius: 12px;
            overflow: hidden;
            aspect-ratio: 1/1;
            border: 2px solid var(--medium-grey);
            transition: all 0.3s ease;
        }

            .game-card:hover {
                border-color: var(--green);
                transform: translateY(-8px);
                box-shadow: 0 12px 32px rgba(0, 255, 136, 0.25);
            }

        .game-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .game-card:hover .game-image {
            transform: scale(1.1);
        }

        .game-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(transparent, rgba(0, 0, 0, 0.95));
            padding: 1.5rem;
            color: var(--text);
        }

        .game-title {
            font-size: 1.1rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: var(--text);
        }

        .game-tournaments {
            font-size: 0.9rem;
            color: var(--green);
            font-weight: 600;
        }

        /* Tournament Cards */
        .tournaments-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .tournament-card {
            background: var(--dark-grey);
            border: 2px solid var(--medium-grey);
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

            .tournament-card:hover {
                border-color: var(--green);
                transform: translateY(-4px);
                box-shadow: 0 8px 24px rgba(0, 255, 136, 0.2);
            }

        .tournament-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .tournament-content {
            padding: 1.5rem;
        }

        .tournament-title {
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--text);
        }

        .tournament-meta {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            color: var(--text);
        }

            .meta-item i {
                color: var(--green);
            }

        .prize-badge {
            background: var(--green);
            color: var(--black);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.9rem;
            display: inline-block;
            margin-bottom: 1rem;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, var(--dark-grey) 0%, var(--medium-grey) 100%);
            border: 2px solid var(--green);
            border-radius: 16px;
            padding: 3rem;
            margin: 3rem 0;
            text-align: center;
        }

        .cta-title {
            color: var(--green);
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            text-transform: uppercase;
        }

        .cta-text {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .cta-btn {
            background: var(--green);
            color: var(--black);
            border: none;
            padding: 1rem 3rem;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 10px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

            .cta-btn:hover {
                background: var(--dark-green);
                transform: translateY(-3px);
                box-shadow: 0 12px 32px rgba(0, 255, 136, 0.3);
            }

        .main-content {
            padding-left: 0;
        }

        .favorite-games-grid {
            grid-template-columns: repeat(4, 1fr);
        }

        .games-grid {
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 1rem;
        }

        .favorite-games-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .tournaments-grid {
            grid-template-columns: 1fr;
        }

        .cta-section {
            padding: 2rem;
        }

        .cta-title {
            font-size: 2rem;
        }

        .games-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .tournament-meta {
            flex-direction: column;
            gap: 0.5rem;
        }
    </style>
}

<div class="homepage-container">
    <div class="row">
        <!-- Barra Lateral Esquerda - Jogos Favoritos -->
    <div class="col-lg-2 col-xl-2 sidebar"> <!-- Changed to col-lg-2 for thinner sidebar -->
        <div class="sidebar-card">
            <h3 class="sidebar-title">Os Meus Jogos</h3>
            <a asp-controller="Games" asp-action="Index" class="btn btn-sm btn-outline-success">Adicionar Mais</a>

            @if (User.Identity.IsAuthenticated && ViewData["FavoriteGames"] is List<Game> favoriteGames && favoriteGames.Any())
            {
                <div class="favorite-games-grid">
                    @foreach (var game in favoriteGames.Take(12))
                    {
                        <div class="favorite-game-item">
                            <img src="@game.ImageUrl" alt="@game.Name" class="game-icon"
                                 onerror="this.onerror=null;this.src='/images/default-game.jpg';">
                            <div class="game-name-tooltip">@game.Name</div>
                        </div>
                    }
                    @if (favoriteGames.Count > 12)
                    {
                        <div class="more-games-count">
                            <small>+@(favoriteGames.Count - 12) mais</small>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-gamepad"></i>
                    <p>Ainda sem jogos favoritos</p>
                    <a asp-controller="Games" asp-action="Index" class="btn btn-success">Explorar Jogos</a>
                </div>
            }
        </div>
    </div>

        <!-- Conteúdo Principal -->
        <div class="col-lg-9 main-content">
            <!-- Secção de Torneios Futuros -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="section-title">Torneios Futuros</h2>
                    <a asp-controller="Tournaments" asp-action="Index" class="btn btn-sm btn-outline-success">Ver Todos</a>
                </div>

                
            </section>

            <!-- Secção de Explorar Jogos -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="section-title">Explorar Jogos</h2>
                    <a asp-controller="Games" asp-action="Index" class="btn btn-sm btn-outline-success">Ver Todos</a>
                </div>

                <div class="row">
                    @if (ViewData["PopularGames"] is List<Game> popularGames)
                    {
                        @foreach (var game in popularGames)
                        {
                            <div class="col-6 col-md-3 mb-4">
                                <div class="game-card">
                                    <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                                        <img src="@game.ImageUrl" alt="@game.Name" class="game-image">
                                        <div class="game-overlay">
                                            <h3 class="game-title">@game.Name</h3>
                                            <span class="game-tournaments">@game.Tournaments.Count torneios</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>

            <!-- Chamada à Ação para Criar Equipa -->
            @if (User.Identity.IsAuthenticated)
            {
                <section class="mb-5">
                    <div class="create-team-cta">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h2>Pronto para criar a tua equipa de sonho?</h2>
                                <p>Cria ou junta-te a uma equipa para competir em torneios juntos</p>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <a asp-controller="Teams" asp-action="Create" class="btn btn-success btn-lg">Criar Equipa</a>
                            </div>
                        </div>
                    </div>
                </section>
            }

            <!-- Torneios com Grandes Prémios -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="section-title">Torneios com Grandes Prémios</h2>
                    <a asp-controller="Tournaments" asp-action="Index" class="btn btn-sm btn-outline-success">Ver Todos</a>
                </div>

                <div class="row">
                    @if (ViewData["HighPrizeTournaments"] is List<Tournament> highPrizeTournaments)
                    {
                        @foreach (var tournament in highPrizeTournaments)
                        {
                            <div class="col-md-4 mb-4">
                                <div class="prize-tournament-card">
                                    <div class="prize-badge">@tournament.PrizePool</div>
                                    <img src="@tournament.ImageUrl" alt="@tournament.Name" class="card-img-top">
                                    <div class="card-body">
                                        <span class="game-tag">@tournament.Game.Name</span>
                                        <h3 class="tournament-title">@tournament.Name</h3>
                                        <div class="tournament-meta">
                                            <span><i class="fas fa-calendar-alt text-success"></i> @tournament.StartDate.ToString("MMM dd")</span>
                                            <span><i class="fas fa-users text-success"></i> @tournament.Registrations.Count</span>
                                        </div>
                                        <a asp-controller="Tournaments" asp-action="Details" asp-route-id="@tournament.Id" class="btn btn-success w-100 mt-3">Detalhes</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = 1;
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('.tournament-card, .game-card, .popular-tournament-card, .prize-tournament-card').forEach(card => {
                card.style.opacity = 0;
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.5s, transform 0.5s';
                observer.observe(card);
            });
        });
    </script>
}