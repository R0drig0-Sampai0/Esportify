@model Esportify.Models.Team
@using System.Security.Claims

@{
    ViewData["Title"] = $"{Model.Name} | Esportify";
}

@section Styles {
    <style>
        .team-details-container {
            padding: 2rem 0;
            background-color: var(--black);
        }

        .team-header {
            background: var(--dark-grey);
            border: 1px solid var(--medium-grey);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .team-banner {
            height: 200px;
            background-size: cover;
            background-position: center;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            border: 1px solid var(--medium-grey);
        }

        .team-logo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 3px solid var(--green);
            object-fit: cover;
            margin: -80px auto 1rem;
            background: var(--dark-grey);
        }

        .team-title {
            color: var(--green);
            font-size: 2.5rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
        }

        .team-meta {
            color: var(--text);
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }

        .team-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1.5rem;
            margin: 2rem 0;
        }

        .stat-card {
            background: var(--medium-grey);
            padding: 1.5rem;
            border-radius: 8px;
            text-align: center;
            border: 1px solid var(--light-grey);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--green);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--text);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .members-section, .tournaments-section {
            background: var(--dark-grey);
            border: 1px solid var(--medium-grey);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .section-title {
            color: var(--green);
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
        }

        .members-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1rem;
        }

        .member-card {
            background: var(--medium-grey);
            border: 1px solid var(--light-grey);
            border-radius: 8px;
            padding: 1rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: all 0.3s ease;
        }

            .member-card:hover {
                border-color: var(--green);
                transform: translateY(-2px);
            }

        .member-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 2px solid var(--green);
            object-fit: cover;
        }

        .member-info h4 {
            color: var(--text);
            margin: 0;
            font-size: 1.1rem;
        }

        .member-info span {
            color: var(--green);
            font-size: 0.9rem;
        }

        .tournament-card {
            background: var(--medium-grey);
            border: 1px solid var(--light-grey);
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

            .tournament-card:hover {
                border-color: var(--green);
                transform: translateX(4px);
            }

        .tournament-header {
            display: flex;
            justify-content: between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .tournament-name {
            color: var(--text);
            font-size: 1.2rem;
            font-weight: 600;
            margin: 0;
        }

        .tournament-prize {
            background: var(--green);
            color: var(--black);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 700;
            font-size: 0.9rem;
        }

        .tournament-meta {
            display: flex;
            gap: 2rem;
            color: var(--text);
            font-size: 0.9rem;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: center;
        }

        .btn-edit {
            background: var(--green);
            color: var(--black);
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-weight: 700;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

            .btn-edit:hover {
                background: var(--dark-green);
                transform: translateY(-2px);
            }

        .btn-back {
            background: var(--medium-grey);
            color: var(--text);
            border: 1px solid var(--light-grey);
            padding: 1rem 2rem;
            border-radius: 8px;
            font-weight: 700;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                border-color: var(--green);
                color: var(--green);
            }

        .btn-join {
            background: var(--green);
            color: var(--black);
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-weight: 700;
            text-transform: uppercase;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-join:hover {
                background: var(--dark-green);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 255, 136, 0.3);
            }

        .btn-leave {
            background: #dc3545;
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-weight: 700;
            text-transform: uppercase;
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .btn-leave:hover {
                background: #c82333;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
            }
    </style>
}

<div class="team-details-container">
    <div class="container">
        <!-- Status Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" style="background-color: rgba(40, 167, 69, 0.1); border: 1px solid #28a745; color: #28a745; padding: 0.75rem; border-radius: 8px; margin-bottom: 1rem;">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }
        
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" style="background-color: rgba(220, 53, 69, 0.1); border: 1px solid #dc3545; color: #dc3545; padding: 0.75rem; border-radius: 8px; margin-bottom: 1rem;">
                <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
            </div>
        }
        
        <!-- Team Header -->
        <div class="team-header">
            <img src="@Model.LogoUrl" alt="@Model.Name" class="team-logo"
                 onerror="this.onerror=null;this.src='/images/default-team-logo.png';">
            <h1 class="team-title">@Model.Name</h1>
            <p class="team-meta">Criado em @Model.CreatedAt.ToString("dd MMMM yyyy")</p>
            <div class="team-status-badge" style="margin-bottom: 1rem;">
                @if (Model.IsOpenForMembers)
                {
                    <span class="badge-open" style="background: rgba(40, 167, 69, 0.2); color: #28a745; padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600; border: 1px solid #28a745;">
                        <i class="fas fa-door-open"></i> Aberta para Novos Membros
                    </span>
                }
                else
                {
                    <span class="badge-closed" style="background: rgba(108, 117, 125, 0.2); color: #6c757d; padding: 0.5rem 1rem; border-radius: 20px; font-weight: 600; border: 1px solid #6c757d;">
                        <i class="fas fa-door-closed"></i> Fechada para Novos Membros
                    </span>
                }
            </div>

            <div class="team-stats">
                <div class="stat-card">
                    <div class="stat-number">@Model.Members.Count</div>
                    <div class="stat-label">Membros</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Torneios</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Vitórias</div>
                </div>
            </div>

            <div class="action-buttons">
                <a asp-controller="Teams" asp-action="Index" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
                
                @if (User.Identity.IsAuthenticated)
                {
                    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                    var isUserMember = Model.Members.Any(m => m.UserId == userId);
                    var isTeamLeader = Model.LeaderId == userId;
                    
                    @if (!isUserMember && Model.IsOpenForMembers)
                    {
                        <form asp-action="JoinTeam" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="teamId" value="@Model.Id" />
                            <button type="submit" class="btn-join">
                                <i class="fas fa-user-plus"></i> Juntar-se à Equipa
                            </button>
                        </form>
                    }
                    else if (isUserMember && !isTeamLeader)
                    {
                        <form asp-action="LeaveTeam" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="teamId" value="@Model.Id" />
                            <button type="submit" class="btn-leave" onclick="return confirm('Tens a certeza que queres sair desta equipa?')">
                                <i class="fas fa-user-minus"></i> Sair da Equipa
                            </button>
                        </form>
                    }
                }
                
                @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || Model.LeaderId == User.FindFirstValue(ClaimTypes.NameIdentifier)))
                {
                    <a asp-controller="Teams" asp-action="Edit" asp-route-id="@Model.Id" class="btn-edit">
                        <i class="fas fa-edit"></i> Editar Equipa
                    </a>
                }
            </div>
        </div>

        <!-- Members Section -->
        <div class="members-section">
            <h2 class="section-title">Membros da Equipa</h2>
            <div class="members-grid">
                @foreach (var member in Model.Members)
                {
                    <div class="member-card">
                        <div class="member-info">
                            <h4>@member.User.UserName</h4>
                            <span>@member.Role</span>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Tournaments Section -->
        <div class="tournaments-section">
            <h2 class="section-title">Torneios Participados</h2>
            @if (Model.Registrations.Any())
            {
                @foreach (var registration in Model.Registrations)
                {
                    <div class="tournament-card">
                        <div class="tournament-header">
                            <h3 class="tournament-name">@registration.Tournament.Name</h3>
                            <span class="tournament-prize">@registration.Tournament.PrizePool.ToString("C")</span>
                        </div>
                        <div class="tournament-meta">
                            <span><i class="fas fa-calendar"></i> @registration.Tournament.StartDate.ToString("dd MMM yyyy")</span>
                            <span><i class="fas fa-gamepad"></i> @registration.Tournament.Game.Name</span>
                            <span><i class="fas fa-users"></i> @registration.Tournament.Registrations.Count equipas</span>
                        </div>
                    </div>
                }
            }
            else
            {
                <p style="color: var(--text); text-align: center; padding: 2rem;">Esta equipa ainda não participou em nenhum torneio.</p>
            }
        </div>
    </div>
</div>
