@using System.Security.Claims
@model IEnumerable<Esportify.Models.Team>

@{
    ViewData["Title"] = "Equipas";
}

@section Styles {
    <style>
        :root {
            --black: #0a0a0a;
            --dark-grey: #1a1a1a;
            --medium-grey: #2a2a2a;
            --light-grey: #3a3a3a;
            --green: #00ff88;
            --dark-green: #00cc6a;
            --text: #ffffff;
            --error: #ff4655;
        }

        .text-gradient {
            background: linear-gradient(to right, var(--green), var(--dark-green));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            color: var(--green);
        }

        .team-card {
            background: var(--dark-grey);
            border: 1px solid var(--medium-grey);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .team-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 255, 136, 0.1);
                border-color: var(--green);
            }

        .team-header {
            padding: 1.5rem 1.5rem 0;
            position: relative;
        }

        .team-title {
            margin-bottom: 1rem;
        }

            .team-title h5 {
                color: var(--green);
                font-weight: 600;
                margin-bottom: 0.5rem;
            }

        .team-tag {
            background: var(--medium-grey);
            color: var(--green);
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .team-logo-container {
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            background-color: rgba(0, 255, 136, 0.05);
            border-radius: 4px;
            border: 1px dashed var(--medium-grey);
        }

        .team-logo {
            max-height: 100px;
            max-width: 100%;
            object-fit: contain;
        }

        .team-body {
            padding: 0 1.5rem;
            flex-grow: 1;
        }

        .team-info {
            color: var(--text);
        }

            .team-info p {
                margin-bottom: 0.5rem;
            }

            .team-info i {
                width: 20px;
                color: var(--green);
            }

        .team-status {
            font-weight: 600;
        }

        .team-footer {
            padding: 1rem 1.5rem;
            background: var(--medium-grey);
            display: flex;
            gap: 0.5rem;
            border-top: 1px solid var(--light-grey);
        }

        .btn-green {
            background-color: var(--green);
            border-color: var(--green);
            color: var(--black);
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-green:hover {
                background-color: var(--dark-green);
                border-color: var(--dark-green);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 255, 136, 0.3);
            }

        .btn-outline-green {
            border: 2px solid var(--green);
            color: var(--green);
            background-color: transparent;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-outline-green:hover {
                background-color: var(--green);
                color: var(--black);
            }

        .alert-dark {
            background-color: var(--medium-grey);
            border-color: var(--light-grey);
            color: var(--text);
        }
    </style>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-green">
            <i class="fas fa-plus me-2"></i>Criar Equipa
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-dark text-center">
            <i class="fas fa-users-slash me-2"></i>Não foram encontradas equipas
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var team in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="team-card">
                        <div class="team-header">
                            <div class="team-title">
                                <h5>@team.Name</h5>
                                @if (!string.IsNullOrEmpty(team.Tag))
                                {
                                    <span class="team-tag">@team.Tag</span>
                                }
                            </div>
                            @if (!string.IsNullOrEmpty(team.LogoUrl))
                            {
                                <div class="team-logo-container">
                                    <img src="@team.LogoUrl" class="team-logo" alt="Logótipo @team.Name">
                                </div>
                            }
                        </div>

                        <div class="team-body">
                            <div class="team-info">
                                <p><i class="fas fa-crown me-2"></i><strong>Líder:</strong> @team.Leader?.UserName</p>
                                <p><i class="fas fa-calendar-alt me-2"></i><strong>Criada em:</strong> @team.CreatedAt.ToString("dd/MM/yyyy")</p>
                                <p>
                                    <i class="fas fa-door-@(team.IsOpenForMembers ? "open" : "closed") me-2"></i>
                                    <strong>Estado:</strong>
                                    <span class="team-status @(team.IsOpenForMembers ? "text-success" : "text-danger")">
                                        @(team.IsOpenForMembers ? "Aberta a membros" : "Fechada")
                                    </span>
                                </p>
                            </div>
                        </div>

                        <div class="team-footer">
                            <a asp-action="Details" asp-route-id="@team.Id" class="btn btn-outline-green btn-sm">
                                <i class="fas fa-info-circle me-1"></i>Detalhes
                            </a>
                            @if (User.Identity.IsAuthenticated && User.FindFirstValue(ClaimTypes.NameIdentifier) == team.LeaderId)
                            {
                                <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit me-1"></i>Editar
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>