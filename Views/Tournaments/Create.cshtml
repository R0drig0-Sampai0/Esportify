@model Tournament
@{
    ViewData["Title"] = "Create Tournament";
}

<div class="create-tournament-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="create-tournament-card">
                    <h1 class="create-tournament-title">Create New Tournament</h1>
                    <p class="create-tournament-subtitle">Fill out the form below to organize your competitive event</p>

                    <form asp-action="Create" enctype="multipart/form-data" class="tournament-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Tournament Basics -->
                        <div class="form-section">
                            <h2 class="section-title">Tournament Basics</h2>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" placeholder="Tournament Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe your tournament..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="GameId" class="control-label">Game</label>
                                <select asp-for="GameId" class="form-control" asp-items="ViewBag.Games">
                                    <option value="">-- Select Game --</option>
                                </select>
                                <span asp-validation-for="GameId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ImageUrl" class="control-label">Tournament Image URL</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                <small class="form-text text-muted">Or upload an image below</small>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Upload Image</label>
                                <input type="file" name="imageFile" class="form-control-file" accept="image/*" />
                            </div>
                        </div>

                        <!-- Schedule -->
                        <div class="form-section">
                            <h2 class="section-title">Schedule</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="StartDate" class="control-label"></label>
                                        <input asp-for="StartDate" class="form-control" type="datetime-local" />
                                        <span asp-validation-for="StartDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="EndDate" class="control-label"></label>
                                        <input asp-for="EndDate" class="form-control" type="datetime-local" />
                                        <span asp-validation-for="EndDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="RegistrationDeadline" class="control-label"></label>
                                <input asp-for="RegistrationDeadline" class="form-control" type="datetime-local" />
                                <span asp-validation-for="RegistrationDeadline" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Team Settings -->
                        <div class="form-section">
                            <h2 class="section-title">Team Settings</h2>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="MaxTeams" class="control-label"></label>
                                        <input asp-for="MaxTeams" class="form-control" min="2" value="16" />
                                        <span asp-validation-for="MaxTeams" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="MinTeamSize" class="control-label"></label>
                                        <input asp-for="MinTeamSize" class="form-control" min="1" value="3" />
                                        <span asp-validation-for="MinTeamSize" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="MaxTeamSize" class="control-label"></label>
                                        <input asp-for="MaxTeamSize" class="form-control" min="1" value="5" />
                                        <span asp-validation-for="MaxTeamSize" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Prize Pool -->
                        <div class="form-section">
                            <h2 class="section-title">Prize Pool</h2>
                            <div class="form-group">
                                <label asp-for="PrizePool" class="control-label"></label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input asp-for="PrizePool" class="form-control" min="0" value="1000" />
                                </div>
                                <span asp-validation-for="PrizePool" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Rules & Format -->
                        <div class="form-section">
                            <h2 class="section-title">Rules & Format</h2>
                            <div class="form-group">
                                <label class="control-label">Tournament Format</label>
                                <select class="form-control">
                                    <option>Single Elimination</option>
                                    <option>Double Elimination</option>
                                    <option>Round Robin</option>
                                    <option>Swiss System</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="control-label">Rules</label>
                                <textarea class="form-control" rows="4" placeholder="Add any specific rules..."></textarea>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-lg">Create Tournament</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .create-tournament-container {
            padding: 3rem 0;
            background-color: #121212;
            min-height: 100vh;
        }

        .create-tournament-card {
            background: rgba(26, 26, 26, 0.9);
            border-radius: 8px;
            padding: 2.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .create-tournament-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            color: var(--green);
            margin-bottom: 0.5rem;
            font-size: 2.2rem;
        }

        .create-tournament-subtitle {
            color: #b3b3b3;
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }

        .form-section {
            margin-bottom: 2.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .section-title {
            color: var(--green);
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
            position: relative;
            padding-left: 1rem;
        }

            .section-title::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 4px;
                background: var(--green);
                border-radius: 4px;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                color: #e0e0e0;
                font-weight: 500;
                margin-bottom: 0.5rem;
                display: block;
            }

        .form-control {
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
            padding: 0.75rem 1rem;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                background-color: rgba(255, 255, 255, 0.08);
                border-color: var(--green);
                color: white;
                box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
            }

            .form-control::placeholder {
                color: #666;
            }

        textarea.form-control {
            min-height: 120px;
        }

        .input-group-text {
            background-color: rgba(40, 167, 69, 0.2);
            border: 1px solid rgba(40, 167, 69, 0.3);
            color: var(--green);
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: flex-end;
        }

        .btn-primary {
            background-color: var(--green);
            border-color: var(--green);
            color: #121212;
            font-weight: 600;
            padding: 0.75rem 2rem;
        }

        .btn-outline-secondary {
            border-color: #666;
            color: #b3b3b3;
            font-weight: 600;
            padding: 0.75rem 2rem;
        }

            .btn-outline-secondary:hover {
                background-color: #333;
                color: white;
            }

        .text-danger {
            color: #ff6b6b !important;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .create-tournament-card {
                padding: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-primary, .btn-outline-secondary {
                width: 100%;
            }
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set default dates
            const now = new Date();
            const startDate = new Date(now.getTime() + 24 * 60 * 60 * 1000); // Tomorrow

            // Format for datetime-local input
            function toLocalISOString(date) {
                const offset = date.getTimezoneOffset() * 60000;
                const localISOTime = (new Date(date - offset)).toISOString().slice(0, -1);
                return localISOTime.substring(0, 16);
            }

            // Set default start date (tomorrow at 18:00)
            startDate.setHours(18, 0, 0, 0);
            document.getElementById('StartDate').value = toLocalISOString(startDate);

            // Set default end date (start date + 3 hours)
            const endDate = new Date(startDate.getTime() + 3 * 60 * 60 * 1000);
            document.getElementById('EndDate').value = toLocalISOString(endDate);

            // Set default registration deadline (start date - 1 hour)
            const regDeadline = new Date(startDate.getTime() - 60 * 60 * 1000);
            document.getElementById('RegistrationDeadline').value = toLocalISOString(regDeadline);

            // Image upload preview
            const imageFileInput = document.querySelector('input[name="imageFile"]');
            const imageUrlInput = document.getElementById('ImageUrl');

            imageFileInput.addEventListener('change', function(e) {
                if (e.target.files.length > 0) {
                    // In a real app, you would upload to your server here
                    // For now, we'll just show a placeholder message
                    imageUrlInput.value = 'Uploading image...';

                    // Simulate upload delay
                    setTimeout(() => {
                        imageUrlInput.value = '/uploads/tournaments/' + e.target.files[0].name;
                    }, 1000);
                }
            });
        });
    </script>
}