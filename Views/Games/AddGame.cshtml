@model Game
@{
    ViewData["Title"] = "Adicionar Novo Jogo";
}

@section Styles {
    <style>
        .create-game-container {
            padding: 2rem 0;
        }

        .page-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            color: white;
            margin-bottom: 2rem;
            font-size: 2rem;
        }

        .game-form {
            background: rgba(26, 26, 26, 0.8);
            border-radius: 8px;
            padding: 2rem;
            border: 1px solid rgba(255, 255, 255, 0.1);
            max-width: 800px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            color: var(--green);
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem;
            background: rgba(40, 40, 40, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 4px;
            color: white;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: var(--green);
                outline: none;
                box-shadow: 0 0 0 2px rgba(0, 255, 136, 0.2);
            }

        .image-upload {
            margin-top: 0.5rem;
        }

        .upload-input {
            display: none;
        }

        .upload-label {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            background: rgba(40, 40, 40, 0.8);
            border: 1px dashed rgba(255, 255, 255, 0.3);
            border-radius: 4px;
            color: #b3b3b3;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .upload-label:hover {
                border-color: var(--green);
                color: var(--green);
            }

        .image-preview {
            margin-top: 1rem;
            width: 200px;
            height: 120px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        #previewImage {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        #noImageText {
            color: #666;
            font-size: 0.9rem;
        }

        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn-cancel {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn-cancel:hover {
                background: rgba(255, 255, 255, 0.2);
            }

        .btn-submit {
            background: var(--green);
            color: var(--black);
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-submit:hover {
                background: var(--dark-green);
            }
    </style>
}

<div class="create-game-container">
    <div class="container">
        <h1 class="page-title">Adicionar Novo Jogo</h1>

        <form asp-action="AddGame" method="post" enctype="multipart/form-data" class="game-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="form-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genre" class="form-label">Género</label>
                <select asp-for="Genre" class="form-control">
                    <option value="">Selecione o Género</option>
                    <option value="FPS">FPS</option>
                    <option value="MOBA">MOBA</option>
                    <option value="Battle Royale">Battle Royale</option>
                    <option value="Strategy">Estratégia</option>
                    <option value="Sports">Desporto</option>
                    <option value="Fighting">Luta</option>
                    <option value="Racing">Corrida</option>
                    <option value="MMORPG">MMORPG</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OfficialWebsite" class="form-label">Website Oficial</label>
                <input asp-for="OfficialWebsite" class="form-control" />
                <span asp-validation-for="OfficialWebsite" class="text-danger"></span>
            </div>

            <div class="form-group image-upload">
                <label for="imageFile" class="form-label">Imagem do Jogo</label>
                <input type="file" id="imageFile" name="ImageFile" accept="image/*" class="upload-input" />
                <label for="imageFile" class="upload-label">
                    <span>Selecionar Imagem</span>
                </label>
                <div class="image-preview">
                    <img id="previewImage" src="#" alt="Pré-visualização" style="display:none;" />
                    <span id="noImageText">Nenhuma imagem selecionada</span>
                </div>
                <span class="text-danger"></span>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn btn-cancel">Cancelar</a>
                <button type="submit" class="btn btn-submit">Criar Jogo</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Funcionalidade de pré-visualização da imagem
        document.getElementById('imageFile').addEventListener('change', function(event) {
            const [file] = event.target.files;
            const preview = document.getElementById('previewImage');
            const noImageText = document.getElementById('noImageText');

            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = 'block';
                noImageText.style.display = 'none';
            } else {
                preview.style.display = 'none';
                noImageText.style.display = 'block';
            }
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}