    <!-- Seção de tecnologias utilizadas -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="section-title">Tecnologias Utilizadas</h2>
        </div>
        <div class="card-body">
            <h5 class="section-subtitle">Tecnologias Principais:</h5>
            <ul class="dev-list">
                <li class="dev-list-item">ASP.NET Core MVC 7.0</li>
                <li class="dev-list-item">Entity Framework Core 7.0</li>
                <li class="dev-list-item">SQLite</li>
                <li class="dev-list-item">SignalR</li>
                <li class="dev-list-item">Bootstrap 5.3</li>
                <li class="dev-list-item">Font Awesome 6.4</li>
            </ul>

            <h5 class="section-subtitle mt-3">Pacotes NuGet:</h5>
            <ul class="dev-list">
                <li class="dev-list-item">Microsoft.AspNetCore.SignalR</li>
                <li class="dev-list-item">Microsoft.EntityFrameworkCore.Sqlite</li>
                <li class="dev-list-item">Microsoft.EntityFrameworkCore.Design</li>
