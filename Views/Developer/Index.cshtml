@{
    ViewData["Title"] = "Informação dos desenvolvedores";
    Layout = "_Layout";
}

@section Styles {
    <style>
        :root {
            --black: #0a0a0a;
            --dark-grey: #1a1a1a;
            --medium-grey: #2a2a2a;
            --light-grey: #3a3a3a;
            --green: #00ff88;
            --dark-green: #00cc6a;
            --text: #ffffff;
            --error: #ff4655;
        }

        .developers-container {
            padding: 2rem 0;
            background-color: var(--black);
        }

        .developers-header h1.text-gradient {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            background: linear-gradient(to right, var(--green), var(--dark-green));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            color: var(--green);
        }

        .tagline {
            font-size: 1.2rem;
            color: var(--text);
            letter-spacing: 1px;
        }

        .card {
            background: var(--dark-grey);
            border: 1px solid var(--medium-grey);
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
        }

        .card-header {
            background: var(--medium-grey);
            border-bottom: 1px solid var(--light-grey);
            padding: 1rem;
        }

        .section-title {
            color: var(--green);
            text-transform: uppercase;
            text-align: center;
            margin-bottom: 0;
            font-weight: 600;
            font-size: 1.5rem;
        }

        .section-subtitle {
            color: var(--green);
            text-transform: uppercase;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .card-body {
            padding: 2rem;
            color: var(--text);
        }

        .dev-list.list-group {
            background: transparent;
        }

        .dev-list-item.list-group-item {
            background: transparent;
            border-bottom: 1px solid var(--medium-grey);
            color: var(--text);
            padding: 1rem;
        }

            .dev-list-item.list-group-item strong {
                color: var(--text);
            }

        .dev-list:not(.list-group) {
            list-style-type: none;
            padding-left: 1rem;
        }

        .dev-list-item:not(.list-group-item) {
            position: relative;
            padding-left: 1.5rem;
            margin-bottom: 0.5rem;
            color: var(--text);
        }

            .dev-list-item:not(.list-group-item)::before {
                content: '\f105';
                font-family: 'Font Awesome 6 Free';
                font-weight: 900;
                position: absolute;
                left: 0;
                color: var(--green);
            }

        .table {
            background: var(--dark-grey);
            color: var(--text);
        }

            .table th,
            .table td {
                border: 1px solid var(--medium-grey);
                padding: 0.75rem;
            }

            .table thead {
                background: var(--medium-grey);
                color: var(--green);
                text-transform: uppercase;
            }

            .table tbody tr:hover {
                background: var(--medium-grey);
            }

        .card-body {
            padding: 1.5rem;
        }

        .section-title {
            font-size: 1.3rem;
        }

        .table {
            font-size: 0.9rem;
        }

    }
</style>
}

<div class="container developers-container">
    <!-- Cabeçalho da página com título e descrição -->
    <div class="developers-header text-center mb-5">
        <h1 class="text-gradient">INFORMAÇÃO DO PROJETO</h1>
        <p class="tagline">Detalhes sobre o desenvolvimento do Esportify</p>
    </div>

    <!-- Seção de informações do curso -->
    <div class="card mb-4">
        <div class="card-header">
            <h2 class="section-title">Informação do Curso</h2>
        </div>
        <div class="card-body">
            <ul class="dev-list list-group list-group-flush">
                <li class="dev-list-item list-group-item"><strong>Curso:</strong> Engenharia Informática</li>
                <li class="dev-list-item list-group-item"><strong>Disciplina:</strong> Desenvolvimento Web</li>
                <li class="dev-list-item list-group-item"><strong>Ano Letivo:</strong> 2024/2025</li>
            </ul>
        </div>
    </div>

    <!-- Seção da equipa de desenvolvimento -->
