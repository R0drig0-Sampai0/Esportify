<!-- Views/User/Profile.cshtml -->
@model (Esportify.Models.User User, Esportify.Models.UserProfile Profile)

@{
    ViewData["Title"] = $"{Model.User.Username}'s Profile";
}

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-avatar">
            <img src="@(!string.IsNullOrEmpty(Model.Profile.AvatarUrl) ? Model.Profile.AvatarUrl : "/images/default-avatar.png")" alt="@Model.User.Username's avatar" class="avatar-img">
        </div>
        <div class="profile-info">
            <h1 class="profile-username">@Model.User.Username</h1>

            <p class="profile-bio">@Model.Profile.Bio</p>

            <div class="profile-stats">
                <div class="stat-item">
                    <span class="stat-number">@Model.Profile.TournamentsWon</span>
                    <span class="stat-label">Wins</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@Model.Profile.TournamentsJoined</span>
                    <span class="stat-label">Tournaments</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@Model.Profile.TotalMatchesPlayed</span>
                    <span class="stat-label">Matches</span>
                </div>
            </div>

            <div class="profile-social">
                @if (!string.IsNullOrEmpty(Model.Profile.TwitchUrl))
                {
                    <a href="@Model.Profile.TwitchUrl" target="_blank"><i class="fab fa-twitch"></i></a>
                }
                @if (!string.IsNullOrEmpty(Model.Profile.YouTubeUrl))
                {
                    <a href="@Model.Profile.YouTubeUrl" target="_blank"><i class="fab fa-youtube"></i></a>
                }
                @if (!string.IsNullOrEmpty(Model.Profile.TwitterUrl))
                {
                    <a href="@Model.Profile.TwitterUrl" target="_blank"><i class="fab fa-twitter"></i></a>
                }
                @if (!string.IsNullOrEmpty(Model.Profile.DiscordUrl))
                {
                    <a href="@Model.Profile.DiscordUrl" target="_blank"><i class="fab fa-discord"></i></a>
                }
            </div>
        </div>
    </div>

    <div class="profile-content">
        <div class="profile-section">
            <h2 class="section-title"><i class="fas fa-gamepad"></i> Preferences</h2>
            <ul>
                <li><strong>Favorite Game:</strong> @Model.Profile.FavoriteGame ?? "Not set"</li>
                <li><strong>Favorite Team:</strong> @Model.Profile.FavoriteTeam ?? "Not set"</li>
                <li><strong>Country:</strong> @Model.Profile.Country ?? "Unknown"</li>
            </ul>
        </div>
    </div>
</div>


@section Styles {
    <style>
        .profile-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
            color: var(--text);
        }

        .profile-header {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            align-items: center;
            margin-bottom: 3rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid var(--accent);
        }

        .profile-avatar {
            position: relative;
            width: 150px;
            height: 150px;
        }

        .avatar-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            border: 3px solid var(--primary);
        }

        .btn-edit-avatar {
            position: absolute;
            bottom: 10px;
            right: 10px;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--primary);
            color: white;
            border: none;
        }

        .profile-info {
            flex: 1;
            min-width: 250px;
        }

        .profile-username {
            font-family: 'Oxanium', sans-serif;
            font-weight: 700;
            color: var(--text);
            margin-bottom: 1rem;
            font-size: 2.5rem;
            background: linear-gradient(to right, var(--primary), var(--highlight));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .profile-stats {
            display: flex;
            gap: 2rem;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            display: block;
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary);
        }

        .stat-label {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text);
            opacity: 0.8;
        }

        .profile-section {
            margin-bottom: 3rem;
        }

        .section-title {
            font-family: 'Oxanium', sans-serif;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .achievements-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .achievement-card {
            background-color: rgba(26, 42, 58, 0.6);
            border-radius: 8px;
            padding: 1.5rem;
            display: flex;
            gap: 1rem;
            align-items: center;
            transition: transform 0.3s ease;
        }

            .achievement-card:hover {
                transform: translateY(-5px);
                background-color: rgba(26, 42, 58, 0.8);
            }

        .achievement-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
            flex-shrink: 0;
        }

        .achievement-details {
            flex: 1;
        }

            .achievement-details h3 {
                margin: 0;
                font-size: 1.1rem;
                color: var(--text);
            }

            .achievement-details p {
                margin: 0.3rem 0;
                font-size: 0.9rem;
                color: var(--text);
                opacity: 0.8;
            }

            .achievement-details small {
                font-size: 0.8rem;
                color: var(--text);
                opacity: 0.6;
            }

        .games-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .game-card {
            background-color: rgba(26, 42, 58, 0.6);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .game-card:hover {
                transform: translateY(-5px);
                background-color: rgba(26, 42, 58, 0.8);
            }

        .game-image {
            width: 100%;
            height: 120px;
            object-fit: cover;
        }

        .game-info {
            padding: 1rem;
        }

            .game-info h3 {
                margin: 0 0 0.5rem 0;
                font-size: 1.1rem;
                color: var(--text);
            }

        .game-stats {
            display: flex;
            gap: 1rem;
            font-size: 0.9rem;
            color: var(--text);
            opacity: 0.8;
        }

            .game-stats i {
                margin-right: 0.3rem;
                color: var(--highlight);
            }

        @@media (max-width: 768px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
            }

            .profile-stats {
                justify-content: center;
            }

            .achievements-grid,
            .games-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}   