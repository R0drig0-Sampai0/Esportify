@model Esportify.Models.User

@{
    ViewData["Title"] = "O Meu Perfil";
}

@section Styles {
    <style>
        :root {
            --black: #0a0a0a;
            --dark-grey: #1a1a1a;
            --medium-grey: #2a2a2a;
            --light-grey: #3a3a3a;
            --green: #00ff88;
            --dark-green: #00cc6a;
            --text: #ffffff;
            --error: #ff4655;
        }

        .profile-container {
            padding: 2rem 0;
            background-color: var(--black);
        }

        .profile-banner {
            height: 200px;
            background-size: cover;
            background-position: center;
            border-radius: 8px 8px 0 0;
            border: 1px solid var(--medium-grey);
        }

        .profile-header {
            text-align: center;
            margin: -50px 0 2rem;
            padding: 1.5rem;
            background: var(--dark-grey);
            border-radius: 8px;
            border: 1px solid var(--medium-grey);
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 3px solid var(--green);
            object-fit: cover;
            margin-bottom: 1rem;
        }

        .profile-header h1 {
            font-size: 2rem;
            color: var(--green);
            margin-bottom: 0.5rem;
        }

        .profile-header p {
            color: var(--text);
            font-size: 1rem;
            margin: 0.25rem 0;
        }

        .profile-content {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            background: var(--dark-grey);
            border: 1px solid var(--medium-grey);
            border-radius: 8px;
        }

        .profile-bio, .profile-stats, .profile-social {
            margin-bottom: 2rem;
        }

        h3 {
            color: var(--green);
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
            text-transform: uppercase;
        }

        .profile-bio p {
            color: var(--text);
            font-size: 1rem;
            line-height: 1.6;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 1.5rem;
            text-align: center;
        }

        .stat-number {
            display: block;
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--green);
        }

        .stat-label {
            color: var(--text);
            font-size: 0.9rem;
        }

        .social-links {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

            .social-links a {
                background: var(--medium-grey);
                color: var(--green);
                padding: 0.5rem 1.25rem;
                border-radius: 50px;
                text-decoration: none;
                font-weight: 600;
                transition: all 0.3s ease;
            }

                .social-links a:hover {
                    background: var(--green);
                    color: var(--black);
                }

        /* Estilo para o botão de edição */
        .btn-green {
            background-color: var(--green);
            border-color: var(--green);
            color: var(--black);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 0.5rem 1.5rem;
            transition: all 0.3s;
        }

            .btn-green:hover {
                background-color: var(--dark-green);
                border-color: var(--dark-green);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 255, 136, 0.3);
            }

        .organizer-toggle-form {
            margin-top: 1.5rem;
            padding: 1.25rem;
            background: var(--medium-grey);
            border-radius: 8px;
            border: 1px solid var(--light-grey);
        }

        .toggle-container {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .toggle-switch {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 26px;
        }

            .toggle-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .toggle-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: var(--dark-grey);
            border: 1px solid var(--light-grey);
            transition: .3s;
            border-radius: 34px;
        }

            .toggle-slider:before {
                position: absolute;
                content: "";
                height: 18px;
                width: 18px;
                left: 4px;
                bottom: 3px;
                background-color: white;
                transition: .3s;
                border-radius: 50%;
            }

        input:checked + .toggle-slider {
            background-color: var(--green);
            border-color: var(--green);
        }

            input:checked + .toggle-slider:before {
                transform: translateX(23px);
                background-color: var(--black);
            }

        .toggle-label {
            color: var(--text);
            font-weight: 500;
            font-size: 1rem;
        }

        .organizer-toggle-form .btn {
            background-color: var(--green);
            color: var(--black);
            border: none;
            font-weight: 600;
            padding: 0.5rem 1.25rem;
            border-radius: 4px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.85rem;
        }

            .organizer-toggle-form .btn:hover {
                background-color: var(--dark-green);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 255, 136, 0.3);
            }

    </style>
}

<div class="profile-container">
    <div class="profile-banner"></div>

    <div class="profile-header">
        <img src="@Model.Profile.AvatarUrl" alt="Avatar" class="profile-avatar" />
        <h1>@Model.Profile.DisplayName</h1>
        <p>@Model.UserName</p>

        @if (!string.IsNullOrEmpty(Model.Profile.Country))
        {
            <p>📍 @Model.Profile.Country</p>
        }

        @if (!User.IsInRole("Admin"))
        {
            <form asp-action="ToggleOrganizer" method="post" class="organizer-toggle-form">
                <div class="toggle-container">
                    <label class="toggle-switch">
                        <input type="checkbox" id="IsOrganizer" name="IsOrganizer"
                        @(Model.IsOrganizer ? "checked" : "")>
                        <span class="toggle-slider"></span>
                    </label>
                    <label class="toggle-label" for="IsOrganizer">
                        Habilitar criação de torneios
                    </label>
                </div>
                <button type="submit" class="btn">Salvar</button>
            </form>
        }
    </div>

    <div class="profile-content">
        <div class="profile-bio">
            <h3>Sobre</h3> 
            <p>@Model.Profile.Bio</p>
        </div>

        <div class="profile-stats">
            <h3>Estatísticas</h3> 
            <div class="stats-grid">
                <div>
                    <span class="stat-number">@Model.Profile.TotalMatchesPlayed</span>
                    <span class="stat-label">Partidas Jogadas</span>  
                </div>
                <div>
                    <span class="stat-number">@Model.Profile.TournamentsJoined</span>
                    <span class="stat-label">Torneios</span>
                </div>
                <div>
                    <span class="stat-number">@Model.Profile.TournamentsWon</span>
                    <span class="stat-label">Vitórias</span> 
                </div>
            </div>
        </div>

        <div class="profile-social">
            <h3>Redes Sociais</h3>  
            <div class="social-links">
                @if (!string.IsNullOrEmpty(Model.Profile.TwitchUrl))
                {
                    <a href="@Model.Profile.TwitchUrl" target="_blank">Twitch</a>
                }
                @if (!string.IsNullOrEmpty(Model.Profile.YouTubeUrl))
                {
                    <a href="@Model.Profile.YouTubeUrl" target="_blank">YouTube</a>
                }
                @if (!string.IsNullOrEmpty(Model.Profile.TwitterUrl))
                {
                    <a href="@Model.Profile.TwitterUrl" target="_blank">Twitter</a>
                }
                @if (!string.IsNullOrEmpty(Model.Profile.DiscordUrl))
                {
                    <a href="@Model.Profile.DiscordUrl" target="_blank">Discord</a>
                }
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" class="btn btn-green">Editar Perfil</a>  
    </div>
</div>